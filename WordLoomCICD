pipeline{
    agent any
    environment {
        NPM_CONFIG_CACHE = "${WORKSPACE}/.npm"
    }
    stages{
        stage('Clean Workspace'){
            steps{
                cleanWs()                
            }
        }
        stage('Clone'){
            steps{
                sh 'git clone https://github.com/deshwal88/WordStone-UI.git'
                dir('./WordStone-UI'){
                    sh 'git checkout develop'
                    sh 'git pull'
                }
            }
        }
        stage('Build'){
            steps{
                dir('./WordStone-UI'){
                    sh 'node -v'
                    sh 'mkdir haila'
                    sh 'npm install --verbose'
                }
            }
        }
    }
}
