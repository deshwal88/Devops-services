pipeline{
    agent any

    environment {
        SERVICE_ACCOUNT_KEY_FILE = credentials('admin-service-account-key')
    }

    triggers {
        pollSCM('* * * * *')
    }

    stages{
        stage('Clean Workspace'){
            steps{
                cleanWs()                
            }
        }
        stage('Code checkout'){
            steps{
                script{
                    checkout([
                        $class: 'GitSCM', 
                        branches: [[name: '*/develop']], 
                        userRemoteConfigs: [[url: 'https://github.com/deshwal88/WordStone-UI.git', credentialsId: 'deshwal88']]
                    ])
                }
            }
        }
        stage('Installing dependencies'){
            steps{
                sh 'node -v'
                sh 'npm.cmd i'
            }
        }
        stage('Build'){
            steps{
                bat 'npm run build'
            }
        }
        stage('Deploy to Firebase'){
            steps{
                sh '''
                export GOOGLE_APPLICATION_CREDENTIALS="$SERVICE_ACCOUNT_KEY_FILE"
                firebase deploy --only hosting
                '''
            }
        }
    }
}
